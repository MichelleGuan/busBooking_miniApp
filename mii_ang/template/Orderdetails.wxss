.order_content_box {
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    position: fixed;
    z-index: 999;
    background: rgba(0,0,0,0.6);
    animation: fade 1s;
}

@keyframes fade {
    0% {
        opacity: 0;
    }

    20% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.details_content {
    width: 600rpx;
    height: auto;
    border-radius: 10rpx;
}

.Or-box {
    width: 600rpx;
    height: auto;
    padding: 0px 0px 40rpx 0px;
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0px 0px 2px #b58ada;
}

.goodsinfo {
    width: 560rpx;
    padding: 20rpx;
    border-bottom: #b58ada 1rpx dashed;
}

.orderinfo {
    width: 560rpx;
    padding: 20rpx;
    border-bottom: #b58ada 1rpx dashed;
}

.cler {
    clear: both;
}

.goodsinfo span {
    padding-left: 20rpx;
}

.info-list {
    font-size: 26rpx;
    color: #999;
    display: list-item;
    overflow: hidden;
    position: relative;
    height: 60rpx;
    line-height: 60rpx;
    width: 370rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    float: left;
}

.orderinfo-list {
    font-size: 32rpx;
    color: #999;
    display: list-item;
    overflow: hidden;
    position: relative;
    height: 60rpx;
    line-height: 60rpx;
    width: 560rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.info-war {
    color: #fda78e;
}

.goodspic {
    width: 180rpx;
    height: 180rpx;
    box-shadow: 0px 0px 2px #ddd;
    border-radius: 10rpx;
    float: left;
    display: block;
    position: relative;
}

.ad-title {
    width: 100%;
    height: 80rpx;
    font-size: 32rpx;
    font-weight: bold;
    text-align: center;
    line-height: 80rpx;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
    background: #9400D3;
    color: #fff;
}

.ad-images {
    width: 100%;
    height: 400rpx;
}

.ad-info {
    width: 540rpx;
    height: 80rpx;
    padding: 10rpx 30rpx;
    font-size: 24rpx;
    color: #333;
    line-height: 42rpx;
    overflow: hidden;
}

.ad-click {
    width: 300rpx;
    margin-top: 30rpx;
    margin-left: 150rpx;
    height: 80rpx;
    background: #b58ada;
    border-radius: 80rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 30rpx;
    color: #fff;
    display: inline-block;
}

.Or-close {
    width: 600rpx;
    height: 120rpx;
    line-height: 180rpx;
    text-align: center;
}

.Or-close image {
    width: 80rpx;
    height: 80rpx;
    display: inline-block;
}