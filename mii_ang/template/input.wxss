.input_content_box {
    top: 0px;
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    position: fixed;
    z-index: 666;
    background: rgba(0,0,0,0.6);
    animation: fade 1s;
}

.input_content {
    width: 500rpx;
    height: auto;
    padding-bottom: 20rpx;
    background: #fff;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 0rpx;
    border-bottom-right-radius: 60rpx;
    border-bottom-left-radius: 10rpx;
    z-index: 888;
}

@keyframes fade {
    0% {
        opacity: 0;
    }

    40% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.close {
    width: 45rpx;
    height: 45rpx;
    top: 0rpx;
    right: 0rpx;
    position: absolute;
}

.input_top {
    text-align: center;
    background: -webkit-linear-gradient(-45deg,#fda78e,#fd677f);
    height: 80rpx;
    width: 100%;
    color: #fff;
    line-height: 80rpx;
    font-size: 30rpx;
    position: relative;
    border-top-left-radius: 20rpx;
    letter-spacing: 5rpx;
}

.inputBox {
    width: auto;
    padding: 20rpx 20rpx;
}

.input-list {
    width: 460rpx;
    height: 80rpx;
    border-radius: 5rpx;
    border: #d9d9d9 1rpx solid;
    margin-top: 20rpx;
    border-top-left-radius: 10rpx;
    border-bottom-right-radius: 20rpx;
}

.input-list picker {
    display: inline-block;
}

.l-title {
    width: 150rpx;
    height: 80rpx;
    padding: 0 0 0 20rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    float: left;
}

.l-title strong {
    font-size: 30rpx;
    color: red;
    line-height: 80rpx;
}

.r-input {
    width: 210rpx;
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    color: #b9b9b9;
    font-size: 30rpx;
}

.mobile_icon {
    width: 60rpx;
    height: 60rpx;
    display: block;
    margin: 10rpx auto;
    float: right;
    padding: 0;
    background-color: #fff;
    line-height: 60rpx;
}

.mobile_icon image {
    width: 60rpx;
    height: 60rpx;
}

.disabled {
    background-color: #d9d9d9;
}

.save-btn {
    width: 200rpx;
    height: 60rpx;
    background: -webkit-linear-gradient(-45deg,#fda78e,#fd677f);
    border-radius: 40rpx;
    text-align: center;
    line-height: 60rpx;
    color: #fff;
    font-size: 30rpx;
    margin: 10rpx auto;
    letter-spacing: 10rpx;
}