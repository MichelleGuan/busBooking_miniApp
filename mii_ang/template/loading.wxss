.loading_box {
    width: 100%;
    text-align: center;
    padding: 500rpx 0;
    z-index: 10000;
    position: fixed;
    height: 100%;
    background: #fff;
}

.loading_box>view {
    display: inline-block;
}

.pulse {
    width: 8rpx;
    height: 40rpx;
    background: #fda78e;
    margin: 8rpx;
    border-radius: 20rpx;
}

.pulse_1 {
    animation: pulse 0.5s linear infinite alternate;
}

.pulse_2 {
    animation: pulse 0.5s linear infinite alternate;
    animation-delay: 0.1s;
}

.pulse_3 {
    animation: pulse 0.5s linear infinite alternate;
    animation-delay: 0.2s;
}

.pulse_4 {
    animation: pulse 0.5s linear infinite alternate;
    animation-delay: 0.3s;
}

@-webkit-keyframes pulse {
    0% {
        transform: scaleY(1);
    }

    100% {
        transform: scaleY(0);
    }
}

@keyframes pulse {
    0% {
        transform: scaleY(1);
    }

    100% {
        transform: scaleY(0);
    }
}