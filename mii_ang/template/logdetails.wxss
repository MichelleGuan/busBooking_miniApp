.elayer-body {
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    position: fixed;
    z-index: 999;
    background: rgba(0,0,0,0.6);
    animation: fade 1s;
}

@keyframes fade {
    0% {
        opacity: 0;
    }

    20% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.elayer-content {
    width: 600rpx;
    height: auto;
    position: absolute;
}

.elayer-box {
    position: relative;
    width: 600rpx;
    height: auto;
    margin-left: auto;
    margin-right: auto;
    padding-top: 80rpx;
    border-radius: 10rpx;
    z-index: 999;
    display: block;
    background: #fda78e;
}

.success-pay-ico {
    position: relative;
    width: 200rpx;
    height: 200rpx;
    margin-left: auto;
    margin-right: auto;
    display: block;
}

.elayer-title {
    z-index: 1000;
    position: relative;
    color: #fff;
    font-size: 40rpx;
    padding: 20rpx 0 0 0;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
}

.elayer-prize {
    position: relative;
    z-index: 1000;
    text-align: center;
    padding-bottom: 20rpx;
}

.elayer-money {
    font-size: 100rpx;
    color: #fff;
}

.elayer-unit {
    font-size: 32rpx;
    color: #fff;
    font-weight: bold;
}

.elayer-order-box {
    width: 550rpx;
    height: auto;
    border-top: 1rpx #efefef solid;
    margin-left: auto;
    margin-right: auto;
    padding-bottom: 20rpx;
}

.elayer-order-info-list {
    width: 550rpx;
    height: auto;
    padding: 10rpx 0;
    display: block;
    font-size: 26rpx;
    color: #efefef;
}

.elayer-order-info-data {
    display: block;
    float: right;
    color: #fff;
    font-weight: bold;
}

.elayer-confirm {
    width: 200rpx;
    height: 60rpx;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
    line-height: 60rpx;
    font-size: 32rpx;
    color: #fff;
    background: #fda78e;
    border-radius: 30rpx;
    margin-top: 20rpx;
    letter-spacing: 5rpx;
    position: relative;
}