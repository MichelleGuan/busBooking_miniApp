.toast_content_box {
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    position: fixed;
    z-index: 9999;
}

.toast_content {
    width: 50%;
    padding: 30rpx;
    background: -webkit-linear-gradient(-45deg,rgba(253,167,142,0.8),rgba(253,103,127,0.8));
    border-top-left-radius: 30rpx;
    border-top-right-radius: 0rpx;
    border-bottom-right-radius: 40rpx;
    border-bottom-left-radius: 10rpx;
    letter-spacing: 5rpx;
}

.toast_content_text {
    height: 100%;
    width: 100%;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
}